# ===== Emotrust 기본 설정 =====
LOG_LEVEL=INFO
DB_PATH=emotrust.db
USE_DB=false

# ===== 점수 게이트 =====
GATE_THRESHOLD=0.70

# ===== 자동 민팅 =====
AUTO_MINT=true

# ===== 시뮬 체인 모드 (B안 핵심) =====
EMOTRUST_SIMULATE_CHAIN=1   # 1이면 블록체인 안 붙고 시뮬 민팅 실행
EMOTRUST_DISABLE_MINT=1     # 실제 민팅 완전 차단

# ===== 체인 설정 (시뮬 모드에선 무시됨) =====
RPC_URL=https://eth-sepolia.g.alchemy.com/v2/xxx
PRIVATE_KEY=0x1234...
PUBLIC_ADDRESS=0x1234...
CONTRACT_ADDRESS=0x1234...

# ===== NFT 보너스 관련 (선택) =====
NFT_BONUS_PER_TOKEN=0.02
NFT_BONUS_CAP=0.10
